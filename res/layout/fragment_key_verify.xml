<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:id="@+id/exchangeVerifyPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical" android:layout_row="0"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/exchange_verify_prompt"
            style="@android:style/TextAppearance.Holo.Large"
            android:layout_alignParentTop="true">
    </TextView>

    <View
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/exchangeVerifyPrompt"
            android:background="@android:color/darker_gray"/>

    <TextView
            android:id="@+id/yourKeyBoxHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Your key:"
            style="@android:style/TextAppearance.Holo.Medium"
            android:layout_gravity="left"/>

    <RelativeLayout
            android:id="@+id/yourKeyBox"
            android:layout_below="@+id/yourKeyBoxHeader"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" android:layout_gravity="left">


        <TextView
                android:id="@+id/your_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/your_full_name"
                android:layout_gravity="left|center_vertical" android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="@android:style/TextAppearance.Medium"/>/>

        <TextView
                android:id="@+id/your_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/your_created"
                android:layout_toRightOf="@+id/your_full_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                style="@android:style/TextAppearance.Holo.Small" android:gravity="right"/>

        <TextView
                android:id="@+id/your_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/your_email"
                android:layout_below="@+id/your_full_name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"
                style="@android:style/TextAppearance.Holo.Small"/>

        <TextView
                android:id="@+id/your_short_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/your_short_id"
                android:layout_below="@+id/your_full_name"
                android:layout_toRightOf="@+id/your_email"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                style="@android:style/TextAppearance.Holo.Small" android:gravity="right"/>

    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Their key:"
            style="@android:style/TextAppearance.Holo.Medium"
            android:layout_gravity="left"/>

    <RelativeLayout
            android:id="@+id/theirKeyBox"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_below="@+id/yourKeyBox"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" android:layout_gravity="left">

        <TextView
                android:id="@+id/their_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/their_full_name"
                android:layout_gravity="left|center_vertical" android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="@android:style/TextAppearance.Medium"/>/>

        <TextView
                android:id="@+id/their_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/their_created"
                android:layout_toRightOf="@+id/their_full_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                style="@android:style/TextAppearance.Holo.Small" android:gravity="right"/>

        <TextView
                android:id="@+id/their_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/their_email"
                android:layout_below="@+id/their_full_name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"
                style="@android:style/TextAppearance.Holo.Small"/>

        <TextView
                android:id="@+id/their_short_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/their_short_id"
                android:layout_below="@+id/their_full_name"
                android:layout_toRightOf="@+id/their_email"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                style="@android:style/TextAppearance.Holo.Small" android:gravity="right"/>

    </RelativeLayout>

    <Button
            android:id="@+id/verify_key_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Verify"/>
</LinearLayout>